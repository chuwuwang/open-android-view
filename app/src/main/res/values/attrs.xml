<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--///////////////////////////////// Text View  ////////////////////////////////////////////-->
    <declare-styleable name="ScrollNumberView">
        <attr name="scrollNumber_number" format="integer" />
        <attr name="scrollNumber_duration" format="integer" />
        <attr name="scrollNumber_textColor" format="color|reference" />
        <attr name="scrollNumber_textSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="GradientTextView">
        <attr name="gradient_text" format="string|reference" />
        <attr name="gradient_upColor" format="color|reference" />
        <attr name="gradient_belowColor" format="color|reference" />
        <attr name="gradient_textSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="InputBox">
        <attr name="input_size" format="integer" />
        <attr name="input_cursorVisible" format="boolean" />
        <attr name="input_margin" format="dimension|reference" />
        <attr name="input_background" format="color|reference" />
        <attr name="input_cursorDrawable" format="color|reference" />
    </declare-styleable>

    <!--///////////////////////////////  Progress Bar ///////////////////////////////////////////-->
    <declare-styleable name="ProgressBar">
        <attr name="progressbar_count" format="integer" />
        <attr name="progressbar_angleOffset" format="integer" />
        <attr name="progressbar_toColor" format="color|reference" />
        <attr name="progressbar_fromColor" format="color|reference" />
        <attr name="progressbar_radius" format="dimension|reference" />
        <attr name="progressbar_strokeWidth" format="dimension|reference" />

        <attr name="progressbar_color" format="color|reference" />
        <attr name="progressbar_strokeColor" format="color|reference" />
        <attr name="progressbar_backgroundColor" format="color|reference" />
    </declare-styleable>

    <!--/////////////////////////// Layout Container  ///////////////////////////////////////////-->
    <declare-styleable name="MarqueeLayout">
        <attr name="marquee_duration" format="integer" />
        <attr name="marquee_endColor" format="color|reference" />
        <attr name="marquee_startColor" format="color|reference" />
        <attr name="marquee_middleColor" format="color|reference" />
        <attr name="marquee_borderWidth" format="dimension|reference" />
        <attr name="marquee_borderRadius" format="dimension|reference" />
    </declare-styleable>

    <!--///////////////////////////////  Animation //////////////////////////////////////////////-->
    <declare-styleable name="CometView">
        <attr name="comet_distance" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="Indicator">
        <attr name="indicator_stickEnable" format="boolean" />
        <attr name="indicator_color" format="color|reference" />
        <attr name="indicator_radius" format="dimension|reference" />
        <attr name="indicator_padding" format="dimension|reference" />
        <attr name="indicator_selectColor" format="color|reference" />
        <attr name="indicator_selectRadius" format="dimension|reference" />
    </declare-styleable>

</resources>