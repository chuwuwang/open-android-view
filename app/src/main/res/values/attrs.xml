<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MarqueeLayout">
        <attr name="marquee_border_width" format="dimension|reference" />
        <attr name="marquee_border_radius" format="dimension|reference" />
        <attr name="marquee_duration" format="integer" />
        <attr name="marquee_end_color" format="color|reference" />
        <attr name="marquee_start_color" format="color|reference" />
        <attr name="marquee_middle_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ScrollNumberView">
        <attr name="scrollNumber_number" format="integer" />
        <attr name="scrollNumber_duration" format="integer" />
        <attr name="scrollNumber_textColor" format="color|reference" />
        <attr name="scrollNumber_textSize" format="dimension|reference" />
    </declare-styleable>

</resources>